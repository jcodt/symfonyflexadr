{% extends 'base.html.twig' %}
{% block body %}
    <div class="row mt-3">
        <div class="col-md"><a href="{{ path('app_create_user') }}">Ajouter un user</a> </div>
    </div>

    <div class="row mt-3">
        <div class="col-md-6">
            <table class="table ml-3">
                <thead class="thead-dark">
                    <tr class="row">
                        <th class="col-2">Id</th>
                        <th class="col-6 text-left">Nom</th>
                        <th class="col-2 text-center">Modifier</th>
                        <th class="col-2 text-center">Supprimer</th>
                    </tr>
                </thead>
                <tbody>
                {% for user in users %}
                    <tr class="row">
                        <td class="col-2">{{ user.id }}</td>
                        <td class="col-6">{{ user.nom }}</td>
                        <td class="col-2 text-center"><a href="{{ path('app_update_user', { id: user.id }) }}">Modifier</a></td>
                        <td class="col-2 text-center"><a href="{{ path('app_delete_user', { id: user.id }) }}">Supprimer</a></td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}